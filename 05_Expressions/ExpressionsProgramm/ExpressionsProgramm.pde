// Mathematical Expressions: Subtraction, Addition, Multiplication, Division

float center1 = 1.5;
float center2 = 2.5;
float center3 = 3.5;
float center4 = 4.5;

println(center1 - 20); // - 18.5
println(center1); // 1.5

println(center1 -= 20); // - 18.5
println(center1); // - 18.5

println(center2 += 20); // 22.5

println(center3 *= 10); // 35.0

println(center4 /= 4.5); // 1.0



// Boolean Expressions & loggical Operators

boolean gameOver = false;

println(gameOver == true); // false
println(gameOver != true); // true



// Comparison Operator
int x = 1;
int y = 1;
int limit1 = 10;

println(x < limit1); // true
println(x > limit1); // false
println(x <= y); // true



// Logical AND

boolean exit = true;
boolean close = false;

println(exit && close); // false


// Logical OR

println(exit || close); //true
